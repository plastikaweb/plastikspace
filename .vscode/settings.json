{
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "files.trimTrailingWhitespace": true,
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/.js": {
      "when": "$(basename).ts"
    },
    "**/.js.map": {
      "when": "$(basename)"
    }
  }
}
